{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://nexus.dev/schemas/module-manifest/v1.0.0",
  "title": "NEXUS Module Manifest",
  "description": "Schema for NEXUS dynamic module manifest.json files",
  "type": "object",
  "required": [
    "module_id",
    "version",
    "category",
    "platform",
    "entrypoint",
    "capabilities"
  ],
  "additionalProperties": false,
  "properties": {
    "module_id": {
      "type": "string",
      "pattern": "^[a-z0-9_]+/[a-z0-9_]+$",
      "description": "Module identifier in format category/platform"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version (MAJOR.MINOR.PATCH)"
    },
    "category": {
      "type": "string",
      "pattern": "^[a-z_]+$",
      "description": "Module category (e.g., weather, finance, calendar)"
    },
    "platform": {
      "type": "string",
      "pattern": "^[a-z0-9_]+$",
      "description": "Platform or service name (e.g., openweather, cibc)"
    },
    "entrypoint": {
      "type": "string",
      "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$",
      "description": "Adapter class name in adapter.py"
    },
    "capabilities": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "pattern": "^[a-z_]+$"
      },
      "description": "List of capabilities this module provides"
    },
    "description": {
      "type": "string",
      "maxLength": 500,
      "description": "Human-readable module description"
    },
    "auth": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["none", "api_key", "oauth2", "basic"]
        },
        "required_credentials": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["type"]
    },
    "pagination": {
      "type": "object",
      "properties": {
        "supported": {
          "type": "boolean"
        },
        "type": {
          "type": "string",
          "enum": ["offset", "cursor", "page"]
        },
        "max_page_size": {
          "type": "integer",
          "minimum": 1
        }
      },
      "required": ["supported"]
    },
    "rate_limits": {
      "type": "object",
      "properties": {
        "requests_per_minute": {
          "type": "integer",
          "minimum": 1
        },
        "requests_per_hour": {
          "type": "integer",
          "minimum": 1
        },
        "burst": {
          "type": "integer",
          "minimum": 1
        }
      }
    },
    "outputs": {
      "type": "object",
      "properties": {
        "schema_ref": {
          "type": "string",
          "description": "Reference to canonical schema in shared/schemas/canonical.py"
        },
        "mime_types": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "artifacts": {
      "type": "object",
      "properties": {
        "produces": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["chart", "file", "log", "report"]
          }
        }
      }
    }
  }
}
